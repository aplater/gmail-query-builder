{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es3",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny" : true
  },
  "compileOnSave": true,
  "rootDir": "src",
  "include": [
    "./src/**/*"
  ]
}
