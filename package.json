{
  "name": "gmail-query-builder",
  "version": "1.0.0",
  "description": "Gmail Query Builder",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "keywords": [
    "google",
    "gmail",
    "apps-script"
  ],
  "author": {
    "name": "MURAKAMI Masahiko",
    "email": "fossamagna2@gmail.com"
  },
  "repository": "fossamagna/gmail-query-builder",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "coverage": "cat coverage/lcov.info | coveralls",
    "build": "mkdirp lib && tsc"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "coveralls": "^3.0.2",
    "jest": "23.4.2",
    "jest-cli": "23.4.2",
    "jest-junit": "5.1.0",
    "mkdirp": "0.5.1",
    "ts-jest": "23.1.3",
    "tsutils": "3.0.0",
    "typescript": "3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "jest-junit": {
    "output": "./junit/junit.xml"
  }
}
